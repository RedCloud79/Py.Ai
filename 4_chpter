mnist = tf.keras.datasets.mnist

(X, YT), (x, yt) = mnist.load_data()

print(YT[0])
print(YT[:10])
print(tf.one_hot(YT[0],10))
print(tf.one_hot(YT[1],10))
print(tf.one_hot(YT[1],10).numpy())
print(tf.one_hot(YT[:10],10).numpy())

import numpy as np
print(np.argmax(tf.one_hot(YT[:10],10)))

